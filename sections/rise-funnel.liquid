<section class="rise-funnel">{%- style -%}.rise-funnel{background:#05060A;padding:50px 0;color:#fff;font-family:-apple-system,BlinkMacSystemFont,'SF Pro Text',system-ui,sans-serif}.rise-wrap{max-width:1250px;margin:0 auto;padding:0 16px}.rise-trust{text-align:center;font-size:13px;letter-spacing:.1em;text-transform:uppercase;padding:6px 14px;display:inline-block;margin:0 auto 28px;border-radius:999px;border:1px solid rgba(255,255,255,.18);background:rgba(255,255,255,.04)}.rise-hero{display:grid;grid-template-columns:1.1fr 1fr;gap:40px;align-items:center;margin-bottom:45px}.rise-kicker{color:#22C55E;font-size:13px;text-transform:uppercase;letter-spacing:.14em;margin-bottom:10px}.rise-title{font-size:clamp(30px,4vw,44px);font-weight:700;margin-bottom:8px}.rise-sub{color:#d1d5db;font-size:15px;margin-bottom:18px}.rise-bullets{list-style:none;padding:0;margin:14px 0}.rise-bullets li{display:flex;gap:8px;margin-bottom:6px;font-size:14px;color:#e5e7eb}.rise-bullets li::before{content:"✔";color:#22C55E;font-weight:700}.rise-btn{background:#22C55E;color:#05060A;padding:12px 24px;border-radius:999px;font-size:14px;font-weight:600;text-decoration:none;display:inline-block;margin-top:14px;transition:.2s}.rise-btn:hover{background:#16A34A}.rise-hero-img img{width:100%;border-radius:20px;border:1px solid rgba(255,255,255,.12);background:radial-gradient(circle at top left,#22c55e22,#05060A)}.logos-wrap{text-align:center;margin:26px 0}.logos-title{font-size:11px;text-transform:uppercase;letter-spacing:.14em;color:#9ca3af;margin-bottom:12px}.logos-grid{display:flex;justify-content:center;flex-wrap:wrap;gap:18px;opacity:.85}.logos-grid img{max-height:24px;filter:grayscale(1) brightness(1.2)}.benefits-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:20px;margin:40px 0}.benefit-box{border:1px solid rgba(255,255,255,.12);border-radius:16px;padding:20px;background:rgba(255,255,255,.03)}.benefit-title{font-size:15px;font-weight:600;margin-bottom:4px}.benefit-text{font-size:13px;color:#d1d5db}.ugc-strip{display:flex;overflow-x:auto;gap:10px;padding-bottom:8px;margin:30px 0}.ugc-card{min-width:170px;border:1px solid rgba(255,255,255,.1);padding:10px;border-radius:14px;background:rgba(255,255,255,.03)}.ugc-thumb{position:relative;margin-bottom:6px;border-radius:12px;overflow:hidden}.ugc-thumb img{width:100%}.ugc-play{position:absolute;inset:0;display:flex;align-items:center;justify-content:center;background:linear-gradient(to bottom,transparent,rgba(0,0,0,.3))}.ugc-play-icon{border:1px solid rgba(255,255,255,.4);border-radius:999px;width:28px;height:28px;display:flex;align-items:center;justify-content:center}.review-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:14px;margin:40px 0}.review-card{border:1px solid rgba(255,255,255,.12);padding:12px;border-radius:14px;background:rgba(255,255,255,.03)}.review-stars{color:#FBBF24;font-size:11px;margin-bottom:4px}.review-name{font-weight:600;font-size:12px;margin-bottom:2px}.review-text{color:#d1d5db;font-size:12px}.product-box{border:1px solid rgba(255,255,255,.12);border-radius:20px;display:grid;grid-template-columns:1fr 1fr;gap:20px;padding:26px;background:radial-gradient(circle at top,#22c55e22,#05060A);margin-top:40px}.product-title{font-size:18px;font-weight:700;margin-bottom:6px}.product-price{color:#22C55E;font-size:17px;font-weight:600;margin-bottom:8px}.product-note{font-size:13px;color:#d1d5db;margin-bottom:12px}.product-img img{width:100%;border-radius:18px;border:1px solid rgba(255,255,255,.12)}@media(max-width:900px){.rise-hero{grid-template-columns:1fr}.benefits-grid{grid-template-columns:1fr 1fr}.review-grid{grid-template-columns:1fr 1fr}.product-box{grid-template-columns:1fr}}@media(max-width:600px){.benefits-grid{grid-template-columns:1fr}.review-grid{grid-template-columns:1fr}}{%- endstyle -%}

<div class="rise-wrap">

{% if section.settings.trust_text != blank %}
<div class="rise-trust">{{ section.settings.trust_text }}</div>
{% endif %}

<div class="rise-hero">
<div>
{% if section.settings.kicker != blank %}<div class="rise-kicker">{{ section.settings.kicker }}</div>{% endif %}
{% if section.settings.heading != blank %}<div class="rise-title">{{ section.settings.heading }}</div>{% endif %}
{% if section.settings.subheading != blank %}<div class="rise-sub">{{ section.settings.subheading }}</div>{% endif %}

<ul class="rise-bullets">
{% if section.settings.bullet_1 != blank %}<li>{{ section.settings.bullet_1 }}</li>{% endif %}
{% if section.settings.bullet_2 != blank %}<li>{{ section.settings.bullet_2 }}</li>{% endif %}
{% if section.settings.bullet_3 != blank %}<li>{{ section.settings.bullet_3 }}</li>{% endif %}
</ul>

{% if section.settings.cta_label != blank %}
<a href="{{ section.settings.cta_link }}" class="rise-btn">{{ section.settings.cta_label }}</a>
{% endif %}
</div>

<div class="rise-hero-img">
{% if section.settings.hero_image != blank %}
{{ section.settings.hero_image | image_url: width: 900 | image_tag }}
{% endif %}
</div>
</div>

{% assign logos = section.blocks | where: "type", "logo" %}
{% if logos.size > 0 %}
<div class="logos-wrap">
<div class="logos-title">{{ section.settings.logos_title }}</div>
<div class="logos-grid">
{% for block in logos %}
{{ block.settings.logo_image | image_url: width: 180 | image_tag }}
{% endfor %}
</div>
</div>
{% endif %}

{% assign benefits = section.blocks | where: "type", "benefit" %}
{% if benefits.size > 0 %}
<div class="benefits-grid">
{% for block in benefits %}
<div class="benefit-box">
<div class="benefit-title">{{ block.settings.title }}</div>
<div class="benefit-text">{{ block.settings.text }}</div>
</div>
{% endfor %}
</div>
{% endif %}

{% assign ugcs = section.blocks | where: "type", "ugc" %}
{% if ugcs.size > 0 %}
<div class="ugc-strip">
{% for block in ugcs %}
<div class="ugc-card">
<div class="ugc-thumb">
{{ block.settings.thumb | image_url: width: 400 | image_tag }}
<div class="ugc-play"><div class="ugc-play-icon">▶</div></div>
</div>
<div>{{ block.settings.caption }}</div>
</div>
{% endfor %}
</div>
{% endif %}

{% assign reviews = section.blocks | where: "type", "review" %}
{% if reviews.size > 0 %}
<div class="review-grid">
{% for block in reviews %}
<div class="review-card">
<div class="review-stars">★★★★★</div>
<div class="review-name">{{ block.settings.name }}</div>
<div class="review-text">{{ block.settings.text }}</div>
</div>
{% endfor %}
</div>
{% endif %}

{% if section.settings.product != blank %}
{% assign p = all_products[section.settings.product] %}
{% if p %}
<div class="product-box">
<div>
<div class="product-title">{{ section.settings.product_title | default: p.title }}</div>
<div class="product-price">{{ p.price | money }}</div>
<div class="product-note">{{ section.settings.product_note }}</div>

{% form 'product', p %}
<input type="hidden" name="id" value="{{ p.selected_or_first_available_variant.id }}">
<button class="rise-btn" type="submit">{{ section.settings.product_btn_label }}</button>
{% endform %}
</div>

<div class="product-img">
{% if section.settings.product_image != blank %}
{{ section.settings.product_image | image_url: width: 700 | image_tag }}
{% else %}
{{ p.featured_image | image_url: width: 700 | image_tag }}
{% endif %}
</div>
</div>
{% endif %}
{% endif %}

</div>
</section>

{% schema %}
{
"name": "Rise Funnel Ultra Premium",
"settings": [
{ "type": "text", "id": "trust_text", "label": "Texte Trust", "default": "100 Nuits d'Essai • Satisfait ou Remboursé • Livraison Offerte" },
{ "type": "text", "id": "kicker", "label": "Kicker", "default": "Réveil Silencieux Premium" },
{ "type": "text", "id": "heading", "label": "Titre principal", "default": "Réveillez-vous sans réveiller votre partenaire." },
{ "type": "textarea", "id": "subheading", "label": "Sous-titre", "default": "Un bracelet à vibrations puissantes conçu pour dormeurs profonds, couples et personnes malentendantes." },

{ "type": "text", "id": "bullet_1", "label": "Bullet 1", "default": "Vibrations 3× plus fortes qu'une montre" },
{ "type": "text", "id": "bullet_2", "label": "Bullet 2", "default": "N’interrompt pas le sommeil de votre partenaire" },
{ "type": "text", "id": "bullet_3", "label": "Bullet 3", "default": "Idéal pour dormeurs profonds & malentendants" },

{ "type": "image_picker", "id": "hero_image", "label": "Image Hero" },
{ "type": "text", "id": "cta_label", "label": "Texte du bouton", "default": "Commander maintenant" },
{ "type": "url", "id": "cta_link", "label": "Lien du bouton" },

{ "type": "text", "id": "logos_title", "label": "Titre logos", "default": "Vu dans" },

{ "type": "product", "id": "product", "label": "Produit" },
{ "type": "text", "id": "product_title", "label": "Titre produit", "default": "Bracelet Réveil Silencieux" },
{ "type": "textarea", "id": "product_note", "label": "Description courte", "default": "Réveil vibratoire puissant • Batterie longue durée • Confort toute la nuit" },
{ "type": "text", "id": "product_btn_label", "label": "Texte bouton produit", "default": "Ajouter au panier" },
{ "type": "image_picker", "id": "product_image", "label": "Image produit personnalisée" }
],
"blocks": [
{
"type": "logo",
"name": "Logo",
"settings": [ { "type": "image_picker", "id": "logo_image", "label": "Logo" } ]
},
{
"type": "benefit",
"name": "Bénéfice",
"settings": [
{ "type": "text", "id": "title", "label": "Titre" },
{ "type": "textarea", "id": "text", "label": "Texte" }
]
},
{
"type": "ugc",
"name": "UGC",
"settings": [
{ "type": "image_picker", "id": "thumb", "label": "Image" },
{ "type": "textarea", "id": "caption", "label": "Texte" }
]
},
{
"type": "review",
"name": "Avis client",
"settings": [
{ "type": "text", "id": "name", "label": "Nom" },
{ "type": "textarea", "id": "text", "label": "Commentaire" }
]
}
],
"presets": [
{ "name": "Rise Funnel Ultra Premium" }
]
}
{% endschema %}
